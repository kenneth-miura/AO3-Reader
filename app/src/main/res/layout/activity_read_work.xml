<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReadWorkActivity">
    <ScrollView
        android:id="@+id/scroll_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/work_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/black"/>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/forward_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_next_chap_button"
        android:backgroundTint="@color/crimson_light"
        android:onClick="changeChapter"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/backwards_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_previous_chap_button"
        android:backgroundTint="@color/crimson_light"
        android:onClick="changeChapter"
        />

</androidx.constraintlayout.widget.ConstraintLayout>